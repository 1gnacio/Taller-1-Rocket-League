# General settings
site_name(CTEST_SITE)
set(CTEST_BUILD_NAME "linux-x86_64-gcc")
set(CTEST_SOURCE_DIRECTORY "${PROJECT_SOURCE_DIR}")
set(CTEST_BINARY_DIRECTORY "${CMAKE_BINARY_DIR}")

# Build settings
set(CTEST_CMAKE_GENERATOR Ninja)
set(CTEST_CONFIGURATION_TYPE RelWithDebInfo)
set(configureOpts
    "-DCMAKE_CXX_FLAGS_INIT=--coverage"
    )

set(CTEST_CUSTOM_COVERAGE_EXCLUDE "box2d;SDL2pp;client;constants;exceptions;game_entities;game_model;handlers;lobby;queues;server")

set(CTEST_COMMAND "ctest -T Test -T Coverage")